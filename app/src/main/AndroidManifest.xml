<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.indal.app.android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">


        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SignupActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ResetPasswordActivity"
            android:label="@string/title_activity_reset_password"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".CourseTreeActivity"
            android:label="Course Tree"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".AcademicRecord"
            android:parentActivityName=".AcademicRecord" />
        <activity
            android:name=".AddCourseActivity"
            android:parentActivityName=".AddCourseActivity" />
        <activity
            android:name=".ImportantDatesActivity"
            android:parentActivityName=".ImportantDatesActivity" />
        <activity
            android:name=".WeeklyScheduleActivity"
            android:parentActivityName=".WeeklyScheduleActivity" />
        <activity
            android:name=".UserInformation"
            android:parentActivityName=".UserInformation" />
        <activity
            android:name=".NewsActivity"
            android:parentActivityName=".NewsActivity" />
        <activity
            android:name=".Feedback"
            android:parentActivityName=".Feedback" />

        <activity
            android:name=".pro_infoActivity"
            android:parentActivityName=".pro_infoActivity" />

        <service android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>